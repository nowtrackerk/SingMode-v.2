{
    "name": "singmode-command",
    "productName": "SingMode Command",
    "version": "1.0.2",
    "description": "Professional Karaoke System",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "author": "SingMode Team",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.singmode.command",
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "main.js"
        ],
        "directories": {
            "output": "release"
        }
    }
}